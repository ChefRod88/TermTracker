<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TermTracker.Views.DashboardPage"
             Title="Dashboard">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Good Morning, Rodney"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <Frame BorderColor="DodgerBlue" CornerRadius="10" Padding="15">
                <StackLayout>
                    <Label Text="{Binding ActiveTerm.Title}"
                           FontSize="20"
                           FontAttributes="Bold" />
                    <Label Text="{Binding ActiveTerm.StartDate, StringFormat='Start: {0:MM/dd/yyyy}'}" />
                    <Label Text="{Binding ActiveTerm.EndDate, StringFormat='End: {0:MM/dd/yyyy}'}" />
                    <Label Text="10 weeks remaining" />
                </StackLayout>
            </Frame>

            <Label Text="Active Courses" FontSize="18" />
            <Label Text="(Carousel goes here in future)" FontSize="14" TextColor="Gray" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

