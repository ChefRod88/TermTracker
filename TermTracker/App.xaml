<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TermTracker"
             xmlns:converters="clr-namespace:TermTracker.Converters"
             x:Class="TermTracker.App">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- 👇 Register the converter globally -->
            <converters:CourseSelectionConverter x:Key="CourseSelectionConverter" />

        </ResourceDictionary>
    </Application.Resources>
</Application>

